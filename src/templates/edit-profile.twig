{% extends 'layouts/default.twig' %}
{% set body_class = 'edit-profile-page' %}
{% set head_title = 'Edit Profile' %}
{% block page %}

			<div class="page-content">
				<div class="breadcrumb-page" data-aos="fade-in">
					<div class="container">
						<nav aria-label="breadcrumb">
							<ol class="breadcrumb">
								<li class="breadcrumb-item font-alt-regular">
									<a  href="index.html">
										<span class="fa fa-home"></span>
									</a>
								</li>
								<li class="breadcrumb-item font-alt-regular">
									<a  href="profile.html">
										My Profile
									</a>
								</li>
								<li class="breadcrumb-item font-alt-regular active">
									Edit Profile
								</li>
							</ol>
						</nav>
					</div>
				</div>
				<section class="edit-profile-listing overflow-visible">
					<div class="container">
						<div class="listing-wrapper">
							<div class="subtitle-section" data-aos="fade-in">
								<h2 class="font-alt-bold">Edit Profile</h2>
							</div>
							<div class="edit-profile">
								<div class="wrapper">
									<form class="form">
										<div class="custom-form">
											<div class="row">
												<div class="col-md-4 side-left">
													<div class="image-area" data-aos="zoom-in">
														<figure>
															<div class="images br-100">
																<img src="assets/img/photos/dummy_1.webp" alt="">
																<!--<span class="text-logo font-alt-semibold">J</span>-->
															</div>
														</figure>
													</div>
													<div class="upload-area">
														<div class="upload-wrapper" data-aos="zoom-in">
															<input type="file" data-jcf='{"buttonText": "Pilih Foto", "placeholderText": "Tidak ada file"}' accept=".jpg, .jpeg, .png">
															{# <input type="file" accept=".jpg, .jpeg, .png"> #}
														</div>
														<p class="font-alt-regular" data-aos="zoom-in">Size Max. 2 MB</p>
													</div>
												</div>
												<div class="col-md-8 side-right">
													<div class="edit-form">
														<div class="form-row">
															<div class="form-group col-12" data-aos="fade-in">
																<label class="label-form font-alt-semibold" for="nameField">Nama</label>
																<input type="text" class="form-control" id="nameField" name="name" placeholder="Input Name Here...">
															</div>
															<div class="form-group col-6" data-aos="fade-in">
																<label class="label-form font-alt-semibold" for="emailField">Email</label>
																<input type="email" class="form-control" id="emailField" name="email" placeholder="Input Email Here..." disabled value="mail@email.com">
															</div>
															<div class="form-group col-6" data-aos="fade-in">
																<label class="label-form font-alt-semibold" for="genderField">Jenis Kelamin</label>
																<select class="form-control" id="genderField" name="input-genderField">
																	<option value="" class="placeholder" hidden>Jenis Kelamin</option>
																	<option value="">Laki-laki</option>
																	<option value="">Perempuan</option>
																</select>
															</div>
															<div class="form-group col-12" data-aos="fade-in">
																<label class="label-form font-alt-semibold" for="bioField">Bio</label>
																<textarea class="form-control" id="bioField" name="bio" placeholder="Bio"></textarea>
															</div>
															<div class="form-group col-12">
																<label class="label-form font-alt-semibold" for="socmedField" data-aos="fade-in">Media Sosial</label>
																<div class="form-row" id="socmedField">
																	<div class="form-group col-6" data-aos="fade-in">
																		<div class="sub-input">
																			<div class="icon">
																				<span class="fa fa-facebook"></span>
																			</div>
																			<input type="text" class="form-control" id="socialFacebook" name="input-facebook" placeholder="Input URL Here...">
																		</div>
																	</div>
																	<div class="form-group col-6" data-aos="fade-in">
																		<div class="sub-input">
																			<div class="icon">
																				<span class="fa fa-x"></span>
																			</div>
																			<input type="text" class="form-control" id="socialX" name="input-x" placeholder="Input URL Here...">
																		</div>
																	</div>
																	<div class="form-group col-6" data-aos="fade-in">
																		<div class="sub-input">
																			<div class="icon">
																				<span class="fab fa-linkedin"></span>
																			</div>
																			<input type="text" class="form-control" id="socialLinkedIn" name="input-linkedin" placeholder="Input URL Here...">
																		</div>
																	</div>
																	<div class="form-group col-6" data-aos="fade-in">
																		<div class="sub-input">
																			<div class="icon">
																				<span class="fab fa-instagram"></span>
																			</div>
																			<input type="text" class="form-control" id="socialInstagram" name="input-instagram" placeholder="Input URL Here...">
																		</div>
																	</div>
																	<div class="form-group col-6" data-aos="fade-in">
																		<div class="sub-input">
																			<div class="icon">
																				<span class="fab fa-youtube"></span>
																			</div>
																			<input type="text" class="form-control" id="socialYoutube" name="input-youtube" placeholder="Input URL Here...">
																		</div>
																	</div>
																	<div class="form-group col-6" data-aos="fade-in">
																		<div class="sub-input">
																			<div class="icon">
																				<span class="fab fa-tiktok"></span>
																			</div>
																			<input type="text" class="form-control" id="socialTiktok" name="input-tiktok" placeholder="Input URL Here...">
																		</div>
																	</div>
																	<div class="form-group col-6" data-aos="fade-in">
																		<div class="sub-input">
																			<div class="icon">
																				<span class="fab fa-whatsapp"></span>
																			</div>
																			<input type="number" class="form-control" id="socialWhatsapp" name="number-whatsapp" placeholder="Input Number Here...">
																		</div>
																	</div>
																</div>
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
										<div class="button-area sticky-action-button">
											<ul>
												<li data-aos="zoom-in">
													<a href="profile.html" class="button button-icon light-blue font-alt-semibold">
														<span class="icon fa fa-angle-left"></span>
														<span>Back</span>
													</a>
												</li>
												<li data-aos="zoom-in">
													<a href="#" class="button button-icon font-alt-semibold">
														<span class="icon fa fa-floppy-o"></span>
														<span>Simpan</span>
													</a>
												</li>
											</ul>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</section>
			</div>

{% endblock %}